<p style="color: green"><%= notice %></p>

<%= render @post %>

<h1>Show: Something to move down page</h1>

<% 1.upto(0).each do |index| %>
  <p><%= index %></p>
<% end %>

<h1>data-preserve-scroll</h1>
<div id="unique-id" data-preserve-scroll style="overflow: auto; height: 200px; border: 1px solid black;">
  <% @posts.each do |post|   %>
    <%= link_to post.title, post %>
    <br/>
  <% end %>
</div>

<br/>
<br/>


<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete %>
</div>
